<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/navigateFab"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="-24dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorAccent"
            android:contentDescription="create new invitation"
            android:elevation="8dp"
            android:src="@drawable/ic_navigate_24dp"
            app:pressedTranslationZ="2dp" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map"
            android:elevation="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="4dp"
                android:text="Venue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/venueName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="top|start"
                android:text="DGIII-44"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/venueAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_place_24dp"
                android:gravity="top|start"
                android:text="DGIII-44"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/venuePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:autoLink="phone"
                android:clickable="true"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_call_24dp"
                android:gravity="top|start"
                android:text="DGIII-44"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/venueWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:autoLink="web"
                android:clickable="true"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_language_24dp"
                android:gravity="top|start"
                android:text="DGIII-44"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>