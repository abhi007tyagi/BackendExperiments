<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white  </item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>


    <style name="Text_Logo" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_small</item>
        <item name="android:textSize">@dimen/text_logo_size</item>
    </style>

    <style name="Text_Logo_Widget" parent="Text_Logo">
        <item name="android:textSize">@dimen/text_invitation_very_large</item>
    </style>

    <style name="Text_Code_Dash" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_invitation_very_large</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/hyphen</item>
    </style>

    <style name="Edit_Text_Code_Entry" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:hint">XXX</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:maxLength">3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edittext_code_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text_Form" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_form_size</item>
    </style>


    <style name="Edit_Text_Form_Entry" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edittext_form_text_size</item>
    </style>

    <style name="Edit_Box_Form_Entry" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_medium</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLength">150</item>
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textSize">@dimen/edittext_form_text_size</item>
    </style>

    <style name="Form_Layout_Margin" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="Text_Invitation" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/text_invitation_large</item>
        <item name="android:drawablePadding">@dimen/drawable_text_invitation_padding_medium</item>
        <item name="android:layout_margin">@dimen/text_invitation_heading_margin</item>
    </style>

    <style name="Text_Invitation_Heading" parent="Text_Invitation">
        <item name="android:textSize">@dimen/text_invitation_small</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Text_Invitation_Body" parent="Text_Invitation">
        <item name="android:textSize">@dimen/text_invitation_medium</item>
        <item name="android:layout_margin">@dimen/text_invitation_body_margin</item>
    </style>

    <style name="Text_Invitation_Action" parent="Text_Invitation_Body">
        <item name="android:clickable">true</item>
    </style>

    <style name="Invitation_Body_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/drawable_text_invitation_padding_small</item>
    </style>

    <style name="Fab_style">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin_end</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_end</item>
        <item name="elevation">@dimen/fab_elevation</item>

    </style>

</resources>
